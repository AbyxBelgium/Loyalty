<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:background="@color/bg_home"
        android:orientation="vertical"
        tools:context="com.abyx.loyalty.activities.BackupRestoreActivity">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/summaryContainer"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/backupSummaryView"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="@string/backup_summary"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/restoreSummaryView"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="@string/restore_summary"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="50dp"
            android:gravity="center"
            android:layout_gravity="center">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:backgroundTint="@color/white"
                android:id="@+id/backupButton"
                android:onClick="backup"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/ic_file_upload_gray_24dp"
                style="?android:attr/borderlessButtonStyle"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:backgroundTint="@color/white"
                android:id="@+id/restoreButton"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/ic_file_download_gray_24dp"
                android:onClick="restore"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
