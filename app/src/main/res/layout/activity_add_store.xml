<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.abyx.loyalty.activities.AddStoreActivity">
    <include layout="@layout/layout_toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:background="@color/bg_home">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:hint="@string/add_store_hint"
            android:textColorHint="@color/gray"
            android:maxLines="1"
            android:id="@+id/storeName"
            android:gravity="center"
            android:layout_marginBottom="25dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/storeName"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:backgroundTint="@color/white"
                android:gravity="start|center_vertical"
                android:id="@+id/scanButton"
                android:onClick="scanBarcode"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_barcode_scan_gray_24dp"
                style="?android:attr/borderlessButtonStyle"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:backgroundTint="@color/white"
                android:gravity="start|center_vertical"
                android:id="@+id/enterButton"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_keyboard_gray_24dp"
                android:onClick="enterBarcode"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

