<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:background="@color/bg_home"
    tools:context="com.abyx.loyalty.activities.BackupRestoreActivity">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/backupSummaryView"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="@string/backup_summary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/restoreSummaryView"
        android:layout_below="@id/backupSummaryView"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="@string/restore_summary"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restoreSummaryView"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingTop="50dp">
        <android.support.design.widget.FloatingActionButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:backgroundTint="@color/white"
            android:gravity="start|center_vertical"
            android:id="@+id/backupButton"
            android:onClick="backup"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_file_upload_gray_24dp"
            style="?android:attr/borderlessButtonStyle"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:backgroundTint="@color/white"
            android:gravity="start|center_vertical"
            android:id="@+id/restoreButton"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_file_download_gray_24dp"
            android:onClick="restore"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

</RelativeLayout>
